{
    "version": 4,
    "configurations": [
        {
            "name": "default",
            "intelliSenseMode": "clang-x64",
            "defines": [ "__x86_64__", "__kernel__" ],
            "includePath": [
                "${workspaceFolder}/include",
                "${workspaceFolder}/usr.include"
            ],
            "compilerArgs": [ "-ffreestanding", "-nostdlibinc", "-nostdlib" ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "gnu99"
        }
    ]
}
