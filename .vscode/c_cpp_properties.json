{
    "version": 4,
    "configurations": [
        {
            "name": "Vex/OS x86_64",
            "intelliSenseMode": "clang-x64",
            "defines": [ "__x86_64__", "__kernel__" ],
            "includePath": [
                "${workspaceFolder}/arch/x86_64/include",
                "${workspaceFolder}/contrib/limine/include",
                "${workspaceFolder}/data/fonts/include",
                "${workspaceFolder}/include"
            ],
            "compilerArgs": [
                "-ffreestanding",
                "-nostdlibinc", "-nostdlib",
                "-Wall", "-Wextra", "-pedantic"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "gnu99"
        }
    ]
}
